# Application Settings
APP_NAME="FastAPI UV Backend"
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0

# Server Settings  
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Security (Production)
ALLOWED_HOSTS=localhost,127.0.0.1
